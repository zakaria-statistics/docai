# Docker Environment Configuration
# This file shows the environment variables used in docker-compose.yml
# These are set automatically by docker-compose, no need to manually configure

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_CHAT_MODEL=llama3.1:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ChromaDB Server Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Vector Store
VECTOR_STORE_PATH=/app/data/vector_db
COLLECTION_NAME=documents

# Chunking Settings
CHUNK_SIZE=800
CHUNK_OVERLAP=150

# RAG Settings
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# Session Settings
SESSION_STORAGE_PATH=/app/data/sessions
MAX_SESSION_HISTORY=50

# Document Processing
MAX_FILE_SIZE_MB=100
